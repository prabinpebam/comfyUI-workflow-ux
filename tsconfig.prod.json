{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "sourceMap": false,
    "removeComments": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "module": "CommonJS",      // Add this explicitly
    "esModuleInterop": true    // Add this to improve compatibility
  },
  "include": [
    "src/server/**/*",
    "src/database/**/*"
  ],
  "exclude": ["node_modules"]
}