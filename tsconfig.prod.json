{
  "compilerOptions": {
    "outDir": "./dist/server",
    "sourceMap": false,
    "removeComments": true,
    "rootDir": "./src",  // Changed from "./src/server" to "./src"
    "baseUrl": "./src",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  // Make sure database files are included in compilation
  "include": [
    "src/**/*.ts"
  ]
}