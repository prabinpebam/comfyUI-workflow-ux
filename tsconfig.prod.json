{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "sourceMap": false,
    "removeComments": true,
    "module": "CommonJS",
    "rootDir": "./src"
  },
  "include": [
    "src/server/**/*",
    "src/database/**/*",
    "src/server/index.ts"  // Explicitly include entry point
  ],
  "exclude": ["node_modules"]
}